{% extends 'base.html.twig' %}

{% block body %}
<div class="table-agile-info">
    {% if is_granted('ROLE_ADMIN') == true %}
        <a class="btn btn-success" href="{{ path('livre_new') }}"><i class="fa fa-plus-square"></i> Ajouter un livre</a><hr/>
    {% endif %}
    <div class="panel panel-default">
        <div class="panel-heading">
            LISTE DES LIVRES
        </div>
        <div>
            <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Disponible</th>
                <th>nombre exemplaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td><a href="{{ path('livre_show', { 'id': livre.id }) }}">{{ livre.id }}</a></td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.auteur }}</td>
                <td>{% if livre.disponibilite %}Oui{% else %}non{% endif %}</td>
                <td>{{ livre.nbre }}</td>
                <td>


                            <a class="btn btn-default" href="{{ path('livre_show', { 'id': livre.id }) }}">Afficher</a>
                    {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-success" href="{{ path('livre_edit', { 'id': livre.id }) }}">Modifier</a>
                    {% endif %}
                        {% set emp= false %}
                        <a class="btn btn-warning" href="{{ path('app_front_emprunt', { 'id': livre.id }) }}">
                        {% for user in livre.users %}
                            {% if user==app.user %}
                                Retourner
                             {% set emp= true %}
                            {% endif %}
                        {% endfor %}
                            {% if emp==false %}
                            Emprunter
                            {% endif %}
                                </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_GESTION') %}
    <ul>
        <li>
            <a href="{{ path('livre_new') }}">Create a new livre</a>
        </li>
    </ul>
    {% endif %}
{% endblock %}
