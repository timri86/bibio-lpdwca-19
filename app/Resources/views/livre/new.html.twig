{% extends 'base.html.twig' %}

{% block body %}
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Ajout des livres
                    </header>
                    <div class="panel-body">
                        {{ form_start(form, {'class': 'form-horizontal bucket-form'}) }}
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Titre du livre</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Auteur du livre</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Auteur du livre</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.editeur, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Description du livre</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Nombre d'exemplaire</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.nbre, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Categorie</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-sm-3 control-label">Iban</label>
                            <div class="col-sm-6">
                                {{ form_widget(form.iban, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <input class="btn btn-success right" type="submit" value="Enregister" />
                        {{ form_end(form) }}
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}